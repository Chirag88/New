#import <Foundation/Foundation.h>

@interface MSARequest : NSObject

/*!
 * @brief the identifier for a request.
 */
@property (nonatomic, strong) NSString *identifier;

/*!
 * @brief the url to be called.
 */
@property (nonatomic, strong) NSString *urlString;

/*!
 * @brief base url in which the querystring will be appended.
 */
@property (nonatomic, strong) NSString *baseURL;

/*!
 * @brief the request method e.g. GET, POST, PUT etc.
 */
@property (nonatomic, strong) NSString *requestMethod;

/*!
 * @brief the request body
 */
@property (nonatomic, strong) NSDictionary *requestBody;

/*!
 * @brief the request headers
 */
@property (nonatomic, strong) NSDictionary *requestHeaders;

@end
